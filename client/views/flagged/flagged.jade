template(name='Flagged')
  #home
    h3 Flagged users

    if applicants
      table
        thead
          tr
            th ID
            th First name
            th Last name
            th Flagged by
            th Flagged Reason
            th Review
        tbody
        each applicants
          tr
            td
              span(id="{{_id}}-_id") {{_id}}
            td
              span(id="{{_id}}-email") {{first}}
            td
              span(id="{{_id}}-last") {{last}}
            td
              span(id="{{_id}}-flaggedBy") {{flaggedBy}}
            td
              span(id="{{_id}}-reason") {{flaggedReason}}
            td
              a(id="submit" href="{{pathFor 'individual' _id}}" class="waves-effect waves-light btn") Review
    else
      h4 We have no flagged CVs right now
